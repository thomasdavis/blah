{
  "name": "@blahai/cli",
  "version": "0.35.0",
  "type": "module",
  "scripts": {
    "build": "tsc && shx cp src/server/mcp-entry.js build/server/ && shx cp -r src/templates build/templates",
    "watch": "tsc --watch",
    "dev": "tsx src/index.ts --help",
    "mcp": "tsx src/index.ts mcp",
    "simulate": "tsx src/index.ts simulate",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "clean": "rm -rf build",
    "prepublishOnly": "pnpm run build",
    "preversion": "pnpm run lint && pnpm run test",
    "version": "pnpm run build && git add -A",
    "release": "pnpm run clean && changeset publish",
    "init": "tsx src/index.ts init",
    "validate": "tsx src/index.ts validate"
  },
  "bin": {
    "blah": "./build/index.js"
  },
  "main": "./build/index.js",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thomasdavis/blah.git"
  },
  "files": [
    "build",
    "src/templates"
  ],
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "agent",
    "host"
  ],
  "author": "Ajax",
  "license": "MIT",
  "description": "Barely Logical Agent Host",
  "dependencies": {
    "@ai-sdk/openai": "^1.2.5",
    "@modelcontextprotocol/sdk": "1.7.0",
    "@blahai/schema": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "ai": "^2.2.37",
    "axios": "^1.7.8",
    "boxen": "^7.1.1",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.0.0",
    "wrap-ansi": "^9.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/boxen": "^3.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.5",
    "@types/wrap-ansi": "^8.1.0",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.8"
  }
}
